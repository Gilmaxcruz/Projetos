@using Identity.Extensions
@{
    ViewData["Title"] = "Secret";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo</p>

@{ if (this.IfClaim("Produtos", "Adcionar"))
    {
        <p>Você só verá isso se tiver permissao de adcionar!</p>
    }
}

<div>
    @Html.ActionLink("Secret","Secret").IfClaimShow(Context, "Produtos","Adcionar")
</div>

<div>
    <br/>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos","Adcionar"))">Excluir</a>
</div>

