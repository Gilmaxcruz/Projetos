@model Mantimentos.App.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"] </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h4>Categoria</h4>
        </dt>
        <dd class = "col-sm-10">
            <h5>  @Html.DisplayFor(model => model.CategoriaNome)</h5>
</dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning text-white" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Editar</a> 
    <a class="btn btn-info" asp-action="Index"><i class="fas fa-chevron-left"></i> Retornar a lista</a>
</div>
