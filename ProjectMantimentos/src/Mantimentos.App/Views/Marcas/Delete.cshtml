@model Mantimentos.App.ViewModels.MarcaViewModel

    @{
        ViewData["Title"] = "Remover";
    }

<h4>Deseja realmente excluir a marca?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h4>Marca</h4>
        </dt>
        <dd class="col-sm-10">
            <h5> @Html.DisplayFor(model => model.Nome)</h5>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt "></i> Deletar</button>
        <a class="btn btn-info" asp-action="Index"><i class="fas fa-chevron-left"></i> Retornar a lista</a>
    </form>
</div>