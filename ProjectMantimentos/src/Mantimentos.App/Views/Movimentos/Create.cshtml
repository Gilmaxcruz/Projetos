@model Mantimentos.App.ViewModels.MovimentoViewModel

<div class="modal fade modal-movimento" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-action="Create">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Novo Movimento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body ">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <h7>Mantimento</h7>
                                <select asp-for="MantimentoId" class="form-control" asp-items="@(new SelectList(Model.MovimentoSelectViewModel,"IdMantimento","Nome"))">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Quantidade" class="control-label"></label>
                                <input asp-for="Quantidade" class="form-control" />
                                <span asp-validation-for="Quantidade" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                               <h7>Movimento</h7><br />
                                <input type="radio" value="1" asp-for="TipoMovimento" checked /> Entrada <br />
                                <input type="radio" value="2" asp-for="TipoMovimento" /> Saída
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" asp-action="Index"> <i class="fas fa-times"></i> Sair</a>
                    <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
