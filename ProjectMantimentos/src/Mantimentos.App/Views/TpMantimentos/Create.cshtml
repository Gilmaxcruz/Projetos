@model Mantimentos.App.ViewModels.TpMantimentoViewModel

<div class="modal fade modal-tpmantimento" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Novo tipo mantimento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body ">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h5>Categorias</h5>
                                    </div>
                                </div>
                                        <div class="row">
                                            <div class="col-lg-12">

                                                @foreach (var item in Model.Categorias)
                                                {
                                                    <div class="form-group form-check">
                                                        <label class="form-check-label">
                                                            <input type="checkbox" class="form-check-input input-check-categoria" data-id="@item.Id" />  @item.CategoriaNome
                                                        </label>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Nome" class="control-label"></label>
                                        <input asp-for="Nome" class="form-control nome-tp" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input input-check-obg" asp-for="Obrigatorio" /> @Html.DisplayNameFor(model => model.Obrigatorio)
                                        </label>
                                    </div>
                                </div>
                            </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" asp-action="Index"> <i class="fas fa-times"></i> Sair</a>
                    <button type="button" class="btn btn-success" onclick="SalvarTpMantimento()"><i class="fas fa-check"></i> Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>

    <script type="text/javascript">
        function SalvarTpMantimento() {
            debugger;
            var lista = Array();
            $('.input-check-categoria').each(function () {
                if ($(this).is(':checked')) {
                    lista.push($(this).attr('data-id'));
                }
            });

            $.ajax({
                method: "POST",
                url: "TpMantimentos/Criar",
                data: {
                    Nome: $('.nome-tp').val(),
                    Obrigatorio: $('.input-check-obg').prop('checked'),
                    CategoriaIds: lista
                }
            }).done(function (msg) {
                $('.modal-tpmantimento').modal('hide');
                location.reload();
            })
            .fail(function (jqXHR, textStatus, msg) {
                alert(msg);
            });

        };
    </script>



