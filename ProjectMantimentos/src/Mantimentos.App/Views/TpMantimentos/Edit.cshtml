@model Mantimentos.App.ViewModels.TpMantimentoViewModel

@{
    ViewData["Title"] = "Edição";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-12">
                        <h5>Categorias</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">

                        @foreach (var item in Model.Categorias)
                        {
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input input-check-categoria" data-id="@item.Id" />  @item.CategoriaNome
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control nome-tp" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input input-check-obg" asp-for="Obrigatorio" /> @Html.DisplayNameFor(model => model.Obrigatorio)
                </label>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" id="hidden-id" />
            <div class="form-group">
                <button type="button" class="btn btn-success" onclick="SalvarTpMantimento()"><i class="fas fa-check"></i> Salvar</button>
                <a class="btn btn-info" asp-action="Index"><i class="fas fa-chevron-left"></i> Retornar a lista</a>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
        function SalvarTpMantimento() {
            debugger;
            var lista = Array();
            $('.input-check-categoria').each(function ()
            {
                if ($(this).is(':checked')) {
                    lista.push($(this).attr('data-id'));
                }
            });
            $.ajax({
                method: "POST",
                url: '@Url.Action("Editar","TpMantimentos")',
                data: {
                    Id: $('#hidden-id').val(),
                    Nome: $('.nome-tp').val(),
                    Obrigatorio: $('.input-check-obg').prop('checked'),
                    CategoriaIds: lista
                }
            }).done(function (msg) {
               location.href = '@Url.Action("Index", "TpMantimentos")';
            })
                .fail(function (jqXHR, textStatus, msg) {
                    alert(msg);
                });
        };
</script>